import X from "../icons/x.astro";
import Phone from "../icons/phone.astro";
import Mail from "../icons/mail.astro";
---

<a href="#drawer"><Menu class="open" color="black" /> </a>
<div id="drawer" class="drawer">
  <a href="#" class="close"><X /></a>
  <nav>
    <ul>
      <li><a class="navigation-text" href="#services">Услуги</a></li>
      <li><a class="navigation-text" href="#work">Портфолио</a></li>
      <li><a class="navigation-text" href="#">Контакты</a></li>
    </ul>
  </nav>
  <div class="contacts">
    <ul>
      <li>
        <a class="subtitle" href=""><Phone />+ 7 3424 150 160</a>
      </li>
      <li>
        <a class="subtitle" href=""><Phone />+7495 308 3040 22 33</a>
      </li>
      <li><a class="subtitle" href=""><Mail />office@prikame.ru</a></li>
    </ul>
  </div>
  <button class="btn btn-md btn-secondary button-text">Оставить заявку</button>
</div>

<style lang="scss">
  @use "../styles/abstracts/mixins" as *;
  @use "../styles/abstracts/variables" as *;

  .open {
    display: none;
    @include respond-to("tablet") {
      display: block;
    }
  }
  #drawer:target {
    display: flex;
  }
  .drawer {
    z-index: 2;
    padding: 20px;
    position: fixed;
    top: 0%;
    left: 0%;
    background-color: $color-navy;
    width: 100%;
    height: 100%;
    display: none;
    flex-direction: column;
    .close {
      margin-left: auto;
    }
    nav {
      margin-top: 40px;
      ul {
        display: flex;
        flex-direction: column;
        row-gap: 20px;
        list-style-type: none;
        li {
          a {
            color: white;
            text-decoration: none;
          }
        }
      }
    }
    .contacts {
      margin-top: 192px;
      ul {
        list-style-type: none;
        li {
          margin-bottom: 12px;
          &:last-child {
            margin-top: 16px;
          }
          a {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
            column-gap: 8px;
          }
        }
      }
    }
    button {
      margin-top: 48px;
      width: 220px;
    }
  }
</style>
