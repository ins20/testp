---
const isDev = import.meta.env.DEV;
---

<section class="main">
  <video autoplay loop muted>
    <source
      src={isDev ? "../../public/final.mp4" : "./final.mp4"}
      type="video/mp4"
    />
  </video>
  <div class="wrapper">
    <div class="text">
      <h1>Автомобильные грузоперевозки по России и СНГ</h1>
      <p class="subtitle">
        Оперативная доставка без задержек с гарантией безопасности и
        страхованием груза
      </p>
    </div>
    <div class="links">
      <a href="#work" class="btn btn-lg btn-primary button-primary-text"
        >Заказть</a
      >
      <a href="#services" class="btn btn-lg btn-light button-primary-text"
        >Услуги</a
      >
    </div>
  </div>
</section>

<style lang="scss">
  @use "../styles/abstracts/variables" as *;
  @use "../styles/abstracts/mixins" as *;

  .main {
    position: relative;
    height: 600px;
    padding: 20px;
    .text {
      margin-top: 187px;
      h1 {
        color: $color-white;
        width: 712px;
        @include respond-to("tablet") {
          width: 550px;
        }
        @include respond-to("mobile") {
          width: 100%;
        }
      }
      p {
        color: $color-light-blue;
        margin-top: 17px;
        width: 603px;
        @include respond-to("tablet") {
          width: 550px;
        }
        @include respond-to("mobile") {
          width: 100%;
        }
      }
    }
    .links {
      display: flex;
      align-items: center;
      column-gap: 24px;
      margin-top: 40px;
      @include respond-to("tablet") {
        margin-top: 32px;
      }
      @include respond-to("mobile") {
        margin-top: 28px;
        flex-direction: column;
        row-gap: 20px;
      }
      a {
        width: 180px;
        height: 54px;
        @include respond-to("mobile") {
          width: 100%;
        }
      }
    }
    video {
      z-index: -1;
      position: absolute;
      top: 0%;
      left: 0%;
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: brightness(40%);
    }
  }
</style>
